<h3><%= controller.action_name.capitalize %> Device</h3>
<hr>
<%= simple_form_for @device, html: { class: 'form-horizontal', role: "form" }  do |f| %>
    <div class="form-group">
      <%= f.label :company, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :company, label: false, input_html: {class: "form-control", autofocus: true}, placeholder: 'Company Name' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :model, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :model, label: false, input_html: {class: "form-control", autofocus: true}, placeholder: 'Model Name' %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :type, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :type, collection: Device::TYPE, label: false, :class => 'form-control', include_blank: false, required: true %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :key, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :key, label: false, input_html: {class: "form-control", autofocus: true}, placeholder: 'Key' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :status, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :status, collection: Device::STATUS, label: false, :class => 'form-control', include_blank: false, required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>