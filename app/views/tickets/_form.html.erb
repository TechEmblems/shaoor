<h3><%= controller.action_name.capitalize %> Ticket</h3>
<hr>
<%= simple_form_for @ticket, html: { class: 'form-horizontal', role: "form" }  do |f| %>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.input :subject, label: false, input_html: {class: "form-control input-lg", autofocus: true}, placeholder: 'Subject' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.input :type, collection: Ticket::TYPE, label: false, input_html: {:class => 'form-control input-lg'}, include_blank: false, required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.input :description, label: false, input_html: {class: "form-control input-lg"}, placeholder: 'Description' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => 'btn btn-primary btn-lg' %>
      </div>
    </div>

<% end %>