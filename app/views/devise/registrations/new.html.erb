<h2>Sign up</h2>
<% resource.devices.build if resource.devices.empty? %>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true %>
    <%#= f.input :password_confirmation, required: true %>
    <%= f.input :cnic, required: true %>
    <%= f.input :phone, required: true %>
    <%= f.simple_fields_for :devices do |d| %>
        <%= d.input :type, collection: Device::TYPE, include_blank: false, required: true %>
        <%= d.input :key, required: true %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Sign up' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
